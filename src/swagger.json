{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Shelter API",
    "description": "This is the API for a room finder application",
    "contact": {
      "email": "pappiah00@gmail.com"
    }
  },
  "host": "room-finder-api.herokuapp.com",
  "basePath": "/api/v1",
  "tags": [
    { "name": "Host", "description": "Endpoints for hosts" },
    { "name": "Admin", "description": "Endpoints for admins" },
    { "name": "User", "description": "Endpoints for regular users" }
  ],
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions": {
    "RoomType": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      }
    },
    "Amenity": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      }
    },
    "Property": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "roomType": {
          "type": "integer",
          "format": "int64"
        },
        "price": {
          "type": "integer",
          "format": "int64"
        },
        "description": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "stayPeriod": {
          "type": "string",
          "enum": ["day", "week", "month", "year"]
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isApproved": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "paths": {
    "/room-types": {
      "get": {
        "description": "Returns a list of all room types",
        "tags": ["Admin", "User", "Host"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/RoomType"
              }
            }
          }
        }
      },
      "post": {
        "description": "Creates a new room type",
        "tags": ["Admin", "Host"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Room type object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RoomType"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/RoomType"
            }
          }
        }
      }
    },
    "/room-types/{id}": {
      "get": {
        "description": "Returns a single room type",
        "tags": ["Admin", "User", "Host"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/RoomType"
            }
          }
        }
      }
    },

    "/amenities": {
      "get": {
        "description": "Returns a list of all amenities",
        "tags": ["Admin", "User", "Host"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Amenity"
              }
            }
          }
        }
      }
    },
    "/amenities/{id}": {
      "get": {
        "description": "Returns an amenity",
        "tags": ["Admin", "Host", "User"],
        "parameters": [
          {
            "type": "integer",
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/Amenity"
            }
          }
        }
      },
      "patch": {
        "description": "Update an amenity",
        "parameters": [
          {
            "name": "Update payload",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Update success",
            "schema": {
              "$ref": "#/definitions/Amenity"
            }
          }
        }
      }
    }
  }
}
